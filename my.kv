#:kivy 1.7.2
<onlyScreen>:
    user: user
    password: password
    check: check
    FloatLayout:
        orientation: "vertical"
        Label:
            size_hint: .4, .1
            font_size: 40
            pos_hint: {'center_x':.5, 'center_y':.9}
            text: "FJU Wi-Fine (O_o)!!"
        TextInput:
            id: user
            size_hint: .6, .1
            font_size: 40
            multiline: False
            pos_hint: {'center_x':.5, 'center_y':.8}
            hint_text: "User"
            text: root.saveuser
        TextInput:
            id: password
            size_hint: .6, .1
            font_size: 40
            multiline: False
            password: True
            pos_hint: {'center_x':.5, 'center_y':.7}
            hint_text: "Password"
            text: root.savepassword
        Button:
            pos_hint: {'center_x':.7, 'center_y':.6}
            font_size: 30
            size_hint: .2, .1
            text: "Send"
            on_press: root.sendwifi()
        CheckBox:
            id: check
            size_hint: None, None
            pos_hint: {'center_x':.3, 'center_y':.6}
            active: True
        Label:
            pos_hint: {'center_x':.5, 'center_y':.6}
            text: "Remember Me"
            font_size: 23
        Label:
            pos_hint: {'center_x':.5, 'center_y':.5}
            color: 1,0,0,1
            font_size: 30
            text: "Check Your LDAP Exactly :)"
        Image:
            source: "wireless.png"
            pos_hint: {'center_x':.5, 'center_y':.3}
            size_hint: .6, .6
        Label:
            pos_hint: {'center_x':.5, 'center_y':3}
            font_size: 30
            text: "Check Wi-Fi Singal First"
        Label:
            pos_hint: {'center_x':.5, 'center_y':.1}
            font_size: 23
            size_hint: .4, .1
            text: "By YunChen"
